.page-content {
  box-sizing: border-box;
  color: #1f2329;
  font-size: 14px;
  line-height: 1.4;
}

.content-block {
  margin: 35px 0;
  padding: 0 15px;
  color: #6d6d72;
  box-sizing: border-box;
}

.content-block-title {
  position: relative;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 14px;
  text-transform: uppercase;
  line-height: 1;
  color: #6d6d72;
  margin: 35px 15px 10px;
}

button::after {
  border: none;
}

.link {
  color: #45c8dc;
  font-size: 14px;
}
