<import src="/component/tabbar/tabbar.wxml" />

<block wx:if="{{tabs.length > 0}}">
  <template is="tabbar" data="{{ tabs: tabs, active: active.id }}"></template>
  <view class="page-content">
    <view class="content-block-title">就业{{active.name}}</view>
    <view class="list-block media-list record-list">
      <navigator url="detail?id={{item.id}}" wx:for="{{list}}" wx:key="id" class="item-link item-content">
        <view class="item-inner">
          <view class="item-title-row">
            <view class="item-title">
              <view class="circle bg-{{active.color}}"></view>
              <text>{{item.title}}</text>
            </view>
          </view>
          <view class="item-text">
            <text>{{item.time}}</text>
            <text class="item-count">浏览：{{item.view}}</text>
          </view>
        </view>
      </navigator>
    </view>
    <loading wx:if="{{loading}}" />
  </view>
</block>
<view wx:else class="blank">{{school.name}}暂不支持此功能</view>