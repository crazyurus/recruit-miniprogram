<view class="page-content">
  <view class="content-block-title">
    <text>校园资讯</text>
    <picker header-text="资讯分类" mode="multiSelector" range="{{category.range}}" bindchange="changeCategory" bindcolumnchange="changeCategoryColumn">
      <text class="category">{{category.value || '全部分类'}}</text>
    </picker>
  </view>
  <view class="list-block media-list record-list">
    <navigator url="detail?id={{item.id}}" wx:for="{{list}}" wx:key="id" class="item-link item-content">
      <view class="item-inner">
        <view class="item-title-row">
          <view class="item-title">
            <view class="circle bg-green"></view>
            <text>{{item.title}}</text>
          </view>
        </view>
        <view class="item-text">
          <text>{{item.source}}</text>
          <text class="item-count">{{item.time}}</text>
        </view>
      </view>
    </navigator>
  </view>
  <loading wx:if="{{loading}}" />
</view>
