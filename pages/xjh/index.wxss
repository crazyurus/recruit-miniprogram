@import '/component/company/company.wxss';
@import '/component/search/search.wxss';

page, .page-content {
  background: #efeff4;
}

.page-content {
  margin-top: 56px;
}

.calendar {
  box-sizing: border-box;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 200;
  width: 100%;
  height: 44px;
  background-color: #45c8dc;
  color: #fff;
  padding: 0 10px;
}

.calendar-group {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.calendar-item {
  width: 26px;
  height: 26px;
  border-radius: 50%;
  text-align: center;
  line-height: 26px;
  font-family: 'DIN Alternate', monospace;
  font-size: 15px;
}

.calendar-item.active {
  background-color: #fff;
  color: #45c8dc;
  font-size: 13px;
}

button[open-type] {
  position: absolute;
  width: 30px;
  padding: 0;
  opacity: 0;
  z-index: 99;
  right: 12px;
  height: 20px;
  top: 10px;
}

.filter-area {
  height: 40px;
  background: #45c8dc;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  position: fixed;
  top: 40px;
  left: 0;
  width: 100%;
  z-index: 9;
  display: flex;
}

.filter-area picker {
  flex: 1;
}

.searchbar {
  height: 40px;
}