<import src="/component/search/search.wxml" />

<template is="searchbar" data="{{ placeholder: '职位/公司名/行业类别', showCancelButton: search.show, width: device.windowWidth }}" ></template>
<view class="filter-area">
  <picker class="filter-tag" bindchange="changeFilterCity" range="{{picker.city}}" range-key="name" value="{{city.index}}">
    <text>{{city.name}}</text>
    <text class="caret"></text>
  </picker>
  <picker class="filter-tag" bindchange="changeFilterUniversity" range="{{picker.university}}" range-key="name" value="{{university.index}}">
    <text>{{university.name}}</text>
    <text class="caret"></text>
  </picker>
</view>
<view class="page-content">
  <navigator wx:for="{{list}}" wx:key="id" class="card" url="detail?id={{item.id}}&bgcolor={{item.backgroundColor}}">
    <view class="card-header" style="background: #{{item.backgroundColor}};">
      <view class="card-no" wx:if="{{item.company_id}}">No.{{item.company_id}}</view>
      <view class="card-title">{{item.company}}</view>
    </view>
    <view class="card-content">
      <view class="card-content-inner">
        <view class="card-content-title">
          <text>{{item.title}}</text>
          <image wx:if="{{item.is_official}}" class="card-content-verify" src="https://web.wutnews.net/Application/SecondHand/Assets/image/verify.png" />
          <text wx:if="{{item.category}}" class="card-content-tag tag-warning">{{item.category}}</text>
        </view>
        <view class="card-content-line">
          <image class="card-content-icon" src="https://web.wutnews.net/Application/Recruit/Assets/image/time.png" />
          <text>{{item.holdtime}}</text>
          <text wx:if="{{item.remain && item.remain === 1}}" class="card-content-tag tag-success">今日</text>
          <text wx:if="{{item.remain && item.remain === 2}}" class="card-content-tag tag-success">明天</text>
          <text wx:if="{{item.remain && item.remain > 2}}" class="card-content-tag tag-info">{{item.remain - 1}}天</text>
          <text wx:if="{{item.isExpired}}" class="card-content-tag tag-danger">已结束</text>
          <text wx:if="{{item.is_cancel}}" class="card-content-tag tag-warning">已取消</text>
        </view>
        <view class="card-content-line" wx:if="{{item.address}}">
          <image class="card-content-icon" src="https://web.wutnews.net/Application/Recruit/Assets/image/address.png" />
          <text>{{item.address}}</text>
        </view>        
      </view>
    </view>
    <view class="card-footer">
      <text class="card-school">{{item.universityName}}</text>
      <text class="card-count">浏览：{{item.totalClicks}}</text>
    </view>
  </navigator>
</view>
