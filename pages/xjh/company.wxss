page, .page-content {
  background-color: #efeff4;
}

.page-content {
  padding: 24px;
}

.form {
  background-color: #fff;
  border-radius: 2px;
  padding: 16px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

.form-label {
  color: #666;
  margin-bottom: 4px;
}

.form-value {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 12px;
}

.form-link {
  font-weight: normal;
  font-size: 14px;
  color: #45c8dc;
}
