page, .page-content {
  background-color: #efeff4;
}

.page-content {
  padding: 24px;
}

.form {
  background-color: #fff;
  border-radius: 2px;
  padding: 16px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3); 
}

.form-label {
  color: #646a73;
  margin-bottom: 4px;
}

.form-value {
  margin-bottom: 12px;
}

.form-value:not(.link) {
  font-size: 16px;
  font-weight: bold;
}

.form-footer {
  color: #646a73;
  margin-top: 24px;
}
