page, .page-content {
  background: #efeff4;
}

.page-content {
  height: auto;
  min-height: 100%;
}

.xjh-header {
  height: 60px;
  display: flex;
  padding-top: 5px;
  background-color: #45c8dc;
}

.xjh-logo {
  width: 45px;
  height: 45px;
  border-radius: 2px;
  margin: 0 15px 15px;
  overflow: hidden;
}

.xjh-logo-university {
  background-color: #fff;
}

.xjh-logo > image {
  width: 45px;
  height: 45px;
}

.xjh-logo-university > image {
  width: 39px;
  height: 39px;
  margin: 3px;
}

.xjh-title {
  flex: 1;
  width: calc(100% - 90px);
  padding: 0 33px;
}

.xjh-title_text {
  font-size: 16px;
  line-height: 1.6;
  color: #fff;
  width: calc(100% - 15px);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.xjh-source {
  font-size: 14px;
  line-height: 1.33;
  color: rgba(255, 255, 255, 0.6);
  width: calc(100% - 15px);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.xjh-info {
  background: #fff;
  border-bottom: 1rpx solid #c8c7cc;
  padding: 12px 15px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

.xjh-info-line {
  line-height: 2;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.xjh-info-address, .xjh-company {
  padding-right: 15px;
  background-image: url("data:image/svg+xml;charset=utf-8,%3Csvg%20viewBox%3D'0%200%2060%20120'%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%3E%3Cpath%20d%3D'm60%2061.5-38.25%2038.25-9.75-9.75%2029.25-28.5-29.25-28.5%209.75-9.75z'%20fill%3D'%23c7c7cc'%2F%3E%3C%2Fsvg%3E");
  background-size: 10px 20px;
  background-repeat: no-repeat;
  background-position: 100% center;
}

.xjh-company {
  background-position: calc(100% - 16px) center;
}

.xjh-company:active {
  background-color: #d9d9d9;
}

.xjh-info-icon {
  display: inline-block;
  width: 14px;
  height: 14px;
  vertical-align: middle;
  margin-top: -2px;
  margin-right: 5px;
}

.xjh-content, .xjh-company {
  background-color: #fff;
  padding: 15px;
  margin: 16px 0;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

.xjh-company_title {
  font-size: 16px;
  margin-bottom: 4px;
}

.xjh-company_text {
  color: #666;
}

.xjh-content-after {
  margin: 40rpx 0 0;
  color: #8c8c8c;
  display: flex;
  justify-content: space-between;
  font-size: inherit;
}

.xjh-content-after button {
  color: #607fa6;
  border: none;
  margin: 0;
  padding: 0;
  font-size: inherit;
  line-height: inherit;
}

.xjh-album {
  padding: 10px;
}

.xjh-album image {
  width: calc(33.33% - 10px);
  margin: 5px;
  height: 110px;
}

.xjh-tabs {
  background: #fff;
  border-bottom: 1rpx solid #c8c7cc;
  display: flex;
  position: sticky;
  top: 0;
  width: 100%;
  height: 40px;
  margin-top: 15px;
}

.xjh-tab {
  flex: 1;
  text-align: center;
  align-self: center;
  position: relative;
}

.xjh-tab text {
  height: 38x;
  line-height: 38px;
  padding: 0 8px;
  display: inline-block;
}

.xjh-no-active {
  border-bottom: 2px solid #fff !important;
  color: #666 !important;
}

.xjh-tab-disabled {
  border-bottom: 2px solid #fff !important;
  color: #bbb !important;
}

.xjh-content_title {
  display: inline-block;
  font-size: 16px;
  font-weight: bold;
  line-height: 0.7;
  margin: 16px 0 10px;
  border-bottom: 6px solid rgba(69,200,220,0.6);
}

.xjh-blank {
  height: 1px;
}

.xjh-share {
  text-align: center;
  height: 80px;
}

.xjh-share button[open-type] {
  display: block;
  width: 160px;
  font-size: 14px;
  border: none;
  line-height: 2;
  padding: 1px 10px;
  border-radius: 2px;
  color: #fff;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  background-color: #45c8dc;
}
