<view class="page-content">
  <view class="xjh-header" style="background: #{{bgcolor}}">
    <view class="xjh-logo {{article.isUniversityLogo ? 'xjh-logo-university' : ''}}">
      <image src="{{article.logoUrl}}" />
    </view>
    <view class="xjh-title">
      <view class="xjh-company">
        <text>{{article.company}}</text>
        <image wx:if="{{article.is_official}}" class="xjh-company-verify" src="https://web.wutnews.net/Application/SecondHand/Assets/image/verify.png" />
      </view>
      <view class="xjh-source">来源：{{article.web}}</view>
    </view>
  </view>
  <view class="xjh-info">
    <view class="xjh-info-line">
      <image class="xjh-info-icon" src="https://web.wutnews.net/Application/Recruit/Assets/image/time.png" />
      <text>举办时间：{{article.holdtime}}</text>
    </view>
    <view class="xjh-info-line" wx:if="{{article.universityName}}">
      <image class="xjh-info-icon" src="https://web.wutnews.net/Application/Recruit/Assets/image/university.png" />
      <text>举办学校：{{article.universityName}}</text>
    </view>
    <view class="xjh-info-line">
      <image class="xjh-info-icon" src="https://web.wutnews.net/Application/Recruit/Assets/image/address.png" />
      <text>举办地点：{{article.address}}</text>
    </view>
  </view>
</view>
