<import src="/component/tab/tab.wxml" />

<template is="tabbar" data="{{tab: tab}}" ></template>
<view class="page-content">
  <view class="content-block-title">面试经验分享</view>
  <view class="list-block media-list record-list">
    <navigator url="detail?id={{item.id}}" wx:if="{{tab == 0}}" wx:for="{{list}}" wx:key="id" class="item-link item-content">
      <view class="item-inner">
        <view class="item-title-row">
          <view class="item-title">
            <view class="circle bg-blue"></view>
            <text>{{item.title}}</text>
          </view>
        </view>
        <view class="item-text">
          <text>{{item.year}}　{{item.companys[0].name}}</text>
          <text class="item-count">浏览：{{item.count}}</text>
        </view>
      </view>
    </navigator>
    <view wx:if="{{tab != 0}}" wx:for="{{list}}" wx:key="id" class="item-link item-content" data-url="{{item.article_url}}" bindtap="openWechatUrl">
      <view class="item-inner">
        <view class="item-title-row">
          <view class="item-title">
            <view class="circle bg-blue"></view>
            <text>{{item.title}}</text>
          </view>
        </view>
        <view class="item-text">
          <text>{{item.mp_name}}</text>
          <text class="item-count">{{item.create_time}}</text>
        </view>
      </view>
    </view>
  </view>
</view>