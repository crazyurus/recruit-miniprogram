page, .page-content {
  background: #efeff4;
}

.page-content {
  height: auto;
  min-height: 100%;
}

.pos-header {
  height: 120px;
  display: flex;
  align-self: center;
  position: relative;
  padding: 20px;
  box-sizing: border-box;
  width: 100%;
  background: #fff;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

.pos-mark {
  position: absolute;
  top: 0;
  right: 5%;
  width: 60px;
  height: 60px;
  background: url(https://web.wutnews.net/Application/Recruit/Assets/image/mark.png) no-repeat center;
  background-size: 100% 100%;
}

.pos-mark-day {
  color: #fff;
  text-align: center;
  margin-top: 20px;
}

.pos-title {
  flex: 1;
}

.pos-name {
  font-size: 16px;
  line-height: 2.2;
  color: #000;
  width: calc(100% - 3px);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pos-line {
  font-size: 14px;
  line-height: 1.6;
  color: #666;
  width: calc(100% - 20px);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pos-content {
  background: #fff;
  padding: 15px;
  margin-bottom: 25px;
  margin-top: 15px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

.pos-share {
  text-align: center;
  margin-bottom: 50px;
}

.pos-share button[open-type] {
  display: inline-block;
  background: #45c8dc;
  font-size: 14px;
  border: none;
  line-height: 2;
  padding: 1px 10px;
  border-radius: 2px;
  color: #fff;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

.text-red {
  color: red;
}
