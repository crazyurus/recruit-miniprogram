<view class="page-content">
  <view class="job-header">
    <view class="job-background" style="background-image: url({{article.logo}});" wx:if="{{logo}}"></view>
    <view class="job-wrapper {{logo ? '' : 'job-wrapper-background'}}">
      <view class="job-logo">
        <image src="{{article.logo}}" />
      </view>
      <view class="job-title">
        <view class="job-company">{{article.title}}</view>
        <view class="job-line">{{article.city}}</view>
        <view class="job-line" wx:if="{{article.major != ''}}">{{article.major}}</view>
        <view class="job-line">{{article.state}}　{{article.time}}</view>
      </view>
    </view>
  </view>
  <view class="job-tabs">
    <view class="job-tab" bindtap="clickTabContent">
      <text class="{{tab.active[0] ? 'active' : ''}} {{tab.disabled[0] ? 'disabled' : ''}}">招聘简章</text>
    </view>
    <view class="job-tab" bindtap="clickTabPosition">
      <text class="{{tab.active[1] ? 'active' : ''}} {{tab.disabled[0] ? 'disabled' : ''}}">招聘岗位</text>
    </view>
  </view>
  <view class="job-content" wx:if="{{tab.active[0]}}">
    <rich-text nodes="{{article.content}}"></rich-text>
  </view>
  <view class="job-position" wx:if="{{tab.active[1]}}">
    <view class="list-block media-list record-list">
    <navigator url="" wx:for="{{position}}" wx:key="id" class="item-link item-content">
      <view class="item-inner">
        <view class="item-title-row">
          <view class="item-title">
            <view class="circle bg-blue"></view>
            <text>{{item.title}}</text>
          </view>
        </view>
        <view class="item-text">部门：{{item.department}}　{{item.city}}</view>
        <view class="item-text">{{item.positionFunction}}<text wx:if="{{item.headCount > 0}}">　招聘{{item.headCount}}人</text></view>
      </view>
    </navigator>
  </view>
  </view>
  <view class="job-share">
    <button open-type="share" plain="true" hover-class="none">将此校招信息分享给同学</button>
  </view>
  <view class="job-blank"></view>
  <view class="job-token">
    <image src="http://web.wutnews.net/act/girlsday/img/token.png" />
  </view>
</view>