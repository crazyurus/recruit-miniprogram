<view class="page-content">
  <view class="content-block-title">校园招聘</view>
  <view class="list-block media-list record-list">
    <navigator url="/pages/job/detail?id={{item.id}}&logo={{item.corpLogo}}" wx:for="{{list}}" wx:key="id" class="item-link item-content">
      <view class="item-media">
        <image src="https://api.wutnews.net/recruit/dajie/image?url={{item.corpLogo}}" />
      </view>
      <view class="item-inner">
        <view class="item-title-row">
          <view class="item-title">
            <text>{{item.projectName}}</text>
          </view>
        </view>
        <view class="item-text">{{item.city}}</view>
        <view class="item-text" wx:if="{{item.onlineStartDate}}">网申时间：{{item.onlineStartDate}} 至 {{item.onlineEndDate}}</view>
      </view>
    </navigator>
  </view>
</view>